<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <%= link_to 'All posts', root_path %>
  </li>
  <li class="breadcrumb-item active">
    <%= @post.post_category.name %>
  </li>
</ol>

<div class="row justify-content-center mt-4 mb-4">
  <article class="col-12">
    <h1 class="mb-4 mb-lg-5"><%= @post.title %></h1>
    <p><%= @post.body %></p><p></p>
    <div class="d-flex justify-content-between mt-5">
      <div id="post-section">
        <span class="me-2"><%= @post.creator.email %></span>
        <span><%= time_ago_in_words(@post.created_at) %></span>
      </div>
    </div>
  </article>
</div>

<%= simple_form_for @post.post_comments.build, url: post_comments_path(@post) do |f| %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit, class: "mt-2 btn-primary" %>
<% end %>

<% @post.post_comments.filter { |c| c.content }.each do |comment| %>
  <div class="card mt-4 mb-4">
    <div class="card-header small mb-2 d-flex">
      <div id="comment-28">
        <span class="font-weight-bold"><%= comment.user.email %></span>
        <span class="mx-2 font-weight-light"><%= time_ago_in_words(comment.created_at) %></span>
      </div>
    </div>

    <div class="card-body d-flex">
      <div class="w-100">
        <div class="mb-3"><%= comment.content %></div>
      </div>
    </div>
  </div>
<% end %>


